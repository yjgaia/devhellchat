{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
    	"source": "/**",
    	"headers": [{
	    	"key" : "Cache-Control",
	    	"value" : "no-cache, no-store, must-revalidate"
	    }]
    }]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
