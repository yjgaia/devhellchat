{
	/* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
	"rules": {
		"connections": {
			".read": "auth != null",
			".write": "auth != null"
		},
		"connections-discord": {
			".read": "auth != null",
			".write": "auth != null"
		},
		"chats": {
			".read": "auth != null",
			".write": "auth != null"
		},
		"users": {
			"$id": {
				".read": "auth != null",
				".write": "$id === auth.uid"
			}
		},
		"ugay": {
			".read": "auth != null",
			"$id": {
				".read": "auth != null",
				".write": "auth != null && (data.exists() !== true || data.child('writerId').val() === auth.uid)"
			}
		}
	}
}